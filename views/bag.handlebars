<div>
  <h2 class="flex justify-center bg-white text-3xl text-green-900">
    Hello
    {{first_name}}, this is your disc bag. 
  </h2>
  <div class="">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 2xl:grid-cols-6 gap-4 pb-40">
      {{#each discs}}
        <div class="disc h-40 rounded border border-yellow-300 text-2xl m-4 bg-green-800 text-white p-3 ">
          <p class="text-white text-2xl font-bold">
          
            {{this.discs_name}}
            
          </p>
          <p class="text-white text-2xl font-bold">
            {{this.category.category_name}}
          </p>
        </div>
      {{/each}}
    </div>
  </div>
</div>